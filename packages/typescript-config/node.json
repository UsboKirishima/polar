{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "composite": false
  },
  "include": ["src/**/*", "*.config.*"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
