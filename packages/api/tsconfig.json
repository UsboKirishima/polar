{
    "extends": "@polar/typescript-config/base",
    "compilerOptions": {
        "composite": true,
        "target": "esnext",
        "rootDir": ".",
        "module": "esnext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "*.ts"],
    "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
