{
  "name": "@polar/types",
  "version": "1.0.0",
  "packageManager": "pnpm@10.20.0",
  "description": "Shared TypeScript types and Zod schemas for Polar",
  "author": "Davide Usberti <usbertibox@gmail.com> (https://usbo.tech)",
  "license": "MIT",
  "homepage": "https://github.com/UsboKirishima/polar",
  "repository": {
    "type": "git",
    "url": "https://github.com/UsboKirishima/polar.git",
    "directory": "packages/types"
  },
  "bugs": {
    "url": "https://github.com/UsboKirishima/polar/issues"
  },
  "keywords": [
    "types",
    "typescript",
    "zod",
    "schemas",
    "validation",
    "polar",
    "monorepo"
  ],
  "main": "dist/index.js",
  "module": "index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./zod": "./dist/zod.js",
    "./general": "./dist/general.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "with-env": "dotenv -e ../../apps/backend/.env --",
    "dev": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\"",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.10.1",
    "@polar/typescript-config": "workspace:*",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}