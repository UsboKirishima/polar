{
  "name": "@polar/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types and Zod schemas for Polar",
  "main": "./index.ts",
  "types": "./index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts",
      "types": "./index.ts"
    },
    "./general": {
      "import": "./general.ts",
      "require": "./general.ts",
      "types": "./general.ts"
    },
    "./zod": {
      "import": "./zod.ts",
      "require": "./zod.ts",
      "types": "./zod.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "*.ts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@polar/db": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@polar/typescript-config": "workspace:*",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "types",
    "typescript",
    "zod",
    "schemas",
    "polar"
  ],
  "author": "Davide Usberti <usbertibox@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "publishConfig": {
    "access": "restricted"
  }
}
