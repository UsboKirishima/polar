    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@polar/typescript-config": "workspace:*",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "algorithm",
    "scoring",
    "mathematics",
    "utilities",
    "polar"
