{
  "name": "@polar/algorithm",
  "version": "1.0.0",
  "description": "Scoring algorithms and mathematical utilities for Polar",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
