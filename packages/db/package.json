{
  "name": "@polar/db",
  "version": "1.0.0",
  "description": "Database layer with Prisma for the Polar application",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --fix",
    "clean": "rm -rf dist .turbo",
    "db:generate": "prisma generate --schema src/schema.prisma",
    "db:push": "prisma db push --schema src/schema.prisma",
    "db:migrate": "prisma migrate dev --schema src/schema.prisma",
    "db:studio": "prisma studio --schema src/schema.prisma",
    "db:reset": "prisma migrate reset --schema src/schema.prisma",
    "postinstall": "prisma generate --schema src/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2"
  },
  "devDependencies": {
    "@polar/typescript-config": "workspace:*",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "prisma": "^6.16.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "database",
    "prisma",
    "orm",
    "polar"
  ],
  "author": "Davide Usberti <usbertibox@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "publishConfig": {
    "access": "restricted"
  }
}
