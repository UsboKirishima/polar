{
  "extends": "@polar/typescript-config/base",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "composite": true,
    "module": "nodenext",
    "target": "esnext",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
