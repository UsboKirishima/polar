  "author": "Davide Usberti <usbertibox@gmail.com> (https://usbo.tech)",
  "license": "MIT",
  "homepage": "https://github.com/UsboKirishima/polar",
  "repository": {
    "type": "git",
    "url": "https://github.com/UsboKirishima/polar.git",
    "directory": "packages/services"
  },
  "bugs": {
    "url": "https://github.com/UsboKirishima/polar/issues"
  },
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@polar/db": "workspace:*",
    "@polar/redis-manager": "workspace:*",
    "@polar/types": "workspace:*",
    "@polar/utils": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "redis": "^5.9.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.10.1",
    "@polar/typescript-config": "workspace:*",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
