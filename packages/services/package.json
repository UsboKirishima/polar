{
  "name": "@polar/services",
  "version": "1.0.0",
  "description": "The Polar's business logic package",
  "main": "dist/src/index.js",
  "module": "src/index.ts",
  "types": "dist/src/index.d.ts",
  "exports": "./dist/src/index.js",
  "files": [
    "dist/src/**/*"
  ],
  "scripts": {
    "with-env": "dotenv -e ../../apps/backend/.env --",
    "dev": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\"",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "keywords": [
    "services",
    "business-logic",
    "auth",
    "encryption",
    "polar",
    "typescript",
    "monorepo"
