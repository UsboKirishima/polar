{
  "name": "@polar/backend",
  "version": "1.0.0",
  "description": "Backend API server for the Polar application",
  "private": true,
  "type": "module",
  "author": "Davide Usberti <usbertibox@gmail.com> (https://usbo.tech)",
  "license": "MIT",
  "keywords": [
    "backend",
    "api",
    "server",
    "trpc",
    "express",
    "polar"
  ],
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node --env-file=.env dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix src test",
    "lint:fix": "eslint --fix src test",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist .turbo",
    "db:generate": "pnpm --filter @polar/db run db:generate",
    "db:push": "pnpm --filter @polar/db run db:push",
    "db:migrate": "pnpm --filter @polar/db run db:migrate",
    "db:studio": "pnpm --filter @polar/db run db:studio"
  },
  "dependencies": {
    "@polar/api": "workspace:*",
    "@polar/db": "workspace:*",
    "@polar/media": "workspace:*",
    "@polar/redis-manager": "workspace:*",
    "@polar/services": "workspace:*",
    "@polar/types": "workspace:*",
    "@polar/utils": "workspace:*",
    "@trpc/server": "^11.6.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.27",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pino": "^10.1.0",
    "redis": "^5.8.3",
    "superjson": "^2.2.2",
    "ws": "^8.18.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@polar/typescript-config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.16.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.20.0"
}
